<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.example.android.fireapp.MyNumberPicker
        android:id="@+id/nPHour"
        max="23"
        min="0"
        android:layout_width="82dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.android.fireapp.MyNumberPicker
        android:id="@+id/nPMinutes"
        max="60"
        min="0"
        android:layout_width="82dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nPSeconds"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/nPHour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.android.fireapp.MyNumberPicker
        android:id="@+id/nPSeconds"
        max="60"
        min="0"
        android:layout_width="82dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/plainTextH"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="none"
        android:text="h"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/nPHour"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:id="@+id/plainTextM"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="none"
        android:text="m"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/nPMinutes"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="none"
        android:text="s"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/nPSeconds"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</android.support.constraint.ConstraintLayout>